    rdfs:label "Memory System" .

:WorkingMemory rdf:type owl:Class ;
    rdfs:subClassOf :MemorySystem ;
    rdfs:label "Working Memory" ;
    rdfs:comment "Limited capacity temporary storage" .

:EpisodicMemory rdf:type owl:Class ;
    rdfs:subClassOf :MemorySystem ;
    rdfs:label "Episodic Memory" ;
    rdfs:comment "Time-stamped event logs" .

:SemanticMemory rdf:type owl:Class ;
    rdfs:subClassOf :MemorySystem ;
    rdfs:label "Semantic Memory" ;
    rdfs:comment "Decontextualized facts and concepts" .

:ProceduralMemory rdf:type owl:Class ;
