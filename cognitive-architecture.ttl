@prefix : <http://openclaw.ai/ontology/cognitive#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix time: <http://www.w3.org/2006/time#> .

<http://openclaw.ai/ontology/cognitive> rdf:type owl:Ontology ;
    rdfs:label "Cognitive Architecture Ontology" ;
    rdfs:comment "A formal ontology for describing agent cognitive systems using reified hypergraph relationships" .

#################################################################
#    Object Properties (Relationships)
#################################################################

### Information Flow Properties
:feedsInto rdf:type owl:ObjectProperty ;
    rdfs:label "feeds into" ;
    rdfs:comment "Information flows from source to target" .

:consolidatesTo rdf:type owl:ObjectProperty ;
    rdfs:label "consolidates to" ;
    rdfs:comment "Information is consolidated from source to target memory" .

:retrievesFrom rdf:type owl:ObjectProperty ;
    rdfs:label "retrieves from" ;
    rdfs:comment "Component retrieves information from memory" .

### Control Flow Properties
:activates rdf:type owl:ObjectProperty ;
    rdfs:label "activates" ;
    rdfs:comment "Component triggers activation of another component" .

:inhibits rdf:type owl:ObjectProperty ;
    rdfs:label "inhibits" ;
    rdfs:comment "Component suppresses another component" .

:triggers rdf:type owl:ObjectProperty ;
    rdfs:label "triggers" ;
    rdfs:comment "Event triggers a process" .

### Temporal Properties
:precedes rdf:type owl:ObjectProperty ;
    rdfs:label "precedes" ;
    rdfs:comment "Occurs before in time" .

:concurrent rdf:type owl:ObjectProperty ;
    rdfs:label "concurrent with" ;
    rdfs:comment "Occurs at same time" .

### Structural Properties
:hasPart rdf:type owl:ObjectProperty ;
    rdfs:label "has part" ;
    rdfs:comment "Compositional relationship" .

:isPartOf rdf:type owl:ObjectProperty ;
    rdfs:label "is part of" ;
    owl:inverseOf :hasPart .

### Dependency Properties
:requires rdf:type owl:ObjectProperty ;
    rdfs:label "requires" ;
    rdfs:comment "Component requires another to function" .

### Reification Properties (for hypergraph)
:participatesIn rdf:type owl:ObjectProperty ;
    rdfs:label "participates in" ;
    rdfs:comment "Entity participates in a relationship event" .

:hasRole rdf:type owl:ObjectProperty ;
    rdfs:label "has role" ;
    rdfs:comment "Participant's role in relationship" .

:hasSource rdf:type owl:ObjectProperty ;
    rdfs:label "has source" ;
    rdfs:comment "Relationship source participant" .

:hasTarget rdf:type owl:ObjectProperty ;
    rdfs:label "has target" ;
    rdfs:comment "Relationship target participant" .

:hasTrigger rdf:type owl:ObjectProperty ;
    rdfs:label "has trigger" ;
    rdfs:comment "What triggers this relationship" .

#################################################################
#    Data Properties
#################################################################

:hasCapacity rdf:type owl:DatatypeProperty ;
    rdfs:label "has capacity" ;
    rdfs:domain :MemorySystem ;
    rdfs:range xsd:integer ;
    rdfs:comment "Capacity in tokens or items" .

:hasLatency rdf:type owl:DatatypeProperty ;
    rdfs:label "has latency" ;
    rdfs:range xsd:duration ;
    rdfs:comment "Processing latency" .

:hasAccuracy rdf:type owl:DatatypeProperty ;
    rdfs:label "has accuracy" ;
    rdfs:range xsd:float ;
    rdfs:comment "Accuracy metric (0.0-1.0)" .

:isEphemeral rdf:type owl:DatatypeProperty ;
    rdfs:label "is ephemeral" ;
    rdfs:range xsd:boolean ;
    rdfs:comment "Whether data persists" .

:hasRetentionPolicy rdf:type owl:DatatypeProperty ;
    rdfs:label "has retention policy" ;
    rdfs:range xsd:string .

#################################################################
#    Classes - Top Level
#################################################################

:CognitiveComponent rdf:type owl:Class ;
    rdfs:label "Cognitive Component" ;
    rdfs:comment "Top-level class for all cognitive architecture components" .

:RelationshipEvent rdf:type owl:Class ;
    rdfs:label "Relationship Event" ;
    rdfs:comment "Reified relationship between cognitive components" .

:Role rdf:type owl:Class ;
    rdfs:label "Role" ;
    rdfs:comment "Role that a component plays in a relationship" .

#################################################################
#    Classes - Input Processing
#################################################################

:InputProcessing rdf:type owl:Class ;
    rdfs:subClassOf :CognitiveComponent ;
    rdfs:label "Input Processing" .

:Perception rdf:type owl:Class ;
    rdfs:subClassOf :InputProcessing ;
    rdfs:label "Perception" ;
    rdfs:comment "Sensory input processing and pattern recognition" .

:Attention rdf:type owl:Class ;
    rdfs:subClassOf :InputProcessing ;
    rdfs:label "Attention" ;
    rdfs:comment "Selective attention and filtering mechanisms" .

:PatternRecognition rdf:type owl:Class ;
    rdfs:subClassOf :Perception ;
    rdfs:label "Pattern Recognition" .

#################################################################
#    Classes - Memory Systems
#################################################################

:MemorySystem rdf:type owl:Class ;
