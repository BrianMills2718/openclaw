#################################################################
#    Role Classes
#################################################################

:SourceRole rdf:type :Role ;
    rdfs:label "Source" ;
    rdfs:comment "Originator of information flow" .

:TargetRole rdf:type :Role ;
    rdfs:label "Target" ;
    rdfs:comment "Recipient of information flow" .

:TriggerRole rdf:type :Role ;
    rdfs:label "Trigger" ;
    rdfs:comment "Initiator of process" .

:ModulatorRole rdf:type :Role ;
    rdfs:label "Modulator" ;
