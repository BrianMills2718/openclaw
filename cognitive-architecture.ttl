:ControllerRole rdf:type :Role ;
    rdfs:label "Controller" ;
    rdfs:comment "Directs or regulates" .

#################################################################
#    Relationship Event Types
#################################################################

:InformationFlowEvent rdf:type :RelationshipEvent ;
    rdfs:label "Information Flow" ;
    rdfs:comment "Data moving between components" .

:ControlFlowEvent rdf:type :RelationshipEvent ;
    rdfs:label "Control Flow" ;
    rdfs:comment "Activation/inhibition between components" .

:ConsolidationEvent rdf:type :RelationshipEvent ;
    rdfs:label "Consolidation" ;
    rdfs:comment "Memory consolidation process" .

:RetrievalEvent rdf:type :RelationshipEvent ;
    rdfs:label "Retrieval" ;
    rdfs:comment "Memory retrieval process" .

:CompactionEvent rdf:type :RelationshipEvent ;
    rdfs:label "Compaction" ;
    rdfs:comment "Context size reduction" .

#################################################################
#    Axioms & Constraints
#################################################################

# Disjoint classes
[ rdf:type owl:AllDisjointClasses ;
  owl:members ( :MemorySystem :ProcessingSystem :ActionSystem )
] .

# WorkingMemory must have exactly one capacity
:WorkingMemory rdfs:subClassOf [
    rdf:type owl:Restriction ;
    owl:onProperty :hasCapacity ;
    owl:cardinality 1
] .

# Reasoning requires at least one MemorySystem
:Reasoning rdfs:subClassOf [
    rdf:type owl:Restriction ;
    owl:onProperty :retrievesFrom ;
    owl:someValuesFrom :MemorySystem
] .

# RelationshipEvent must have source and target
:RelationshipEvent rdfs:subClassOf [
    rdf:type owl:Restriction ;
    owl:onProperty :hasSource ;
    owl:cardinality 1
] .

:RelationshipEvent rdfs:subClassOf [
    rdf:type owl:Restriction ;
    owl:onProperty :hasTarget ;
    owl:cardinality 1
] .

#################################################################
#    Example: Reified Relationship
#    Working Memory consolidates to Episodic Memory
#################################################################

:wmConsolidation rdf:type :ConsolidationEvent ;
    rdfs:label "Working Memory Consolidation" ;
    :hasSource :workingMemoryInstance ;
    :hasTarget :episodicMemoryInstance ;
    :hasTrigger "capacity_exceeded" ;
    :hasLatency "100"^^xsd:duration .

# Participants with roles
:workingMemoryInstance :participatesIn :wmConsolidation ;
    :hasRole :SourceRole .

:episodicMemoryInstance :participatesIn :wmConsolidation ;
    :hasRole :TargetRole .
